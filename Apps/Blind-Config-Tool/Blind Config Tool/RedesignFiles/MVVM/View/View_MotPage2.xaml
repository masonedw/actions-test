                                   TextAlignment="Center"
                                   Margin="0,10,0,0"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Width="160"/>

                        <TextBox Text="{Binding IPForSetCurrentPos, FallbackValue='1'}"
                                 Height="30"
                                 Width="50"
                                 HorizontalAlignment="Center"
                                 Margin="0,20,0,0"
                                 Style="{StaticResource StandardTextbox_Style}"
                                 HorizontalContentAlignment="Center"
                                 PreviewTextInput="TwoTo98" 
                                 VerticalContentAlignment="Center" 
                                 CharacterCasing="Upper" 
                                PreviewKeyDown="NoSpace"
                                GotFocus="SelectAll"
                                PreviewMouseDown="HandleMouseDown"/>

                        <Button Content="Set"
                                Height="30"
                                Width="80"
                                Margin="0,20,0,0"
                                Command="{Binding SetIPToCurrentPosition}"
                                Style="{StaticResource StandardButton_Style}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>

        <Button Content="Main Page"
                Command="{Binding ChangePage}"
                    HorizontalAlignment="Right"
                VerticalAlignment="Top"
                    Grid.Row="2"
                Height="30"
                Width="230"
                Margin="0,0,20,0"
                Style="{StaticResource StandardButton_Style}"/>
    </Grid>
</UserControl>
